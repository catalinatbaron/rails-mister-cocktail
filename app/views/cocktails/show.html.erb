<div class="banner">
    <h1><%= @cocktail.name %></h1>
    <% @cocktail.doses.each do |dose| %>
    <li> <%= dose.description %> </li>
    <li> <%= dose.ingredient.name %> </li>
    <li> <%= link_to 'Delete', dose_path(dose), :method=>:delete %></li>
    <% end %>
    <%= link_to '+', new_cocktail_dose_path(@cocktail) %>
</div>


