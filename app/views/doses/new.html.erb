<div class="form-container">
  <div class="row">
    <div class="col-xs-12 col-sm-9 col-offset-3">
        <%= simple_form_for [@cocktail, @dose] do |f| %>
        <li><%= f.input :description %></li>
        <li><%= f.association :ingredient, collection: @ingredients %> </li>
        <button><%= f.submit "Add drink",:input_html =>{:class => "create"}%></button>
        <% end  %>
    </div>
  </div>
</div>
